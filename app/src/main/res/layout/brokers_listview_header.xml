<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/broker_name_head"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_margin="1dp"
        android:layout_weight="3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Название"/>

    <TextView
        android:id="@+id/broker_service_fee_head"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_margin="1dp"
        android:layout_weight="3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Комиссия брокера"/>

    <TextView
        android:id="@+id/broker_transaction_fee_head"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_margin="1dp"
        android:layout_weight="4"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Комиссия транзакции"/>

    <TextView
        android:id="@+id/broker_is_iss_head"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_weight="2"
        android:layout_margin="1dp"
        android:maxLines="1"
        android:text="ИИС"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>